root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# TypeScript and JavaScript
[*.{ts,js}]
indent_size = 2

# Svelte files
[*.svelte]
indent_size = 2

# HTML, CSS
[*.{html,htm,css}]
indent_size = 2

# SCSS
[*.scss]
indent_size = 2

# JSON
[*.json]
indent_size = 2

# YAML and TOML (e.g. svelte.config.js alternatives or CI)
[*.{yml,yaml,toml}]
indent_size = 2

# Markdown
[*.{md,markdown}]
trim_trailing_whitespace = false
insert_final_newline = true
indent_size = 2
