{
    "useTabs": false,
    "singleQuote": false,
    "printWidth": 120,
    "tabWidth": 2,
    "semi": true,
	"bracketSpacing": true,
	"arrowParens": "always",
	"svelteStrictMode": false,
	"svelteIndentScriptAndStyle": true,

	"trailingComma": "none",
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	]
}
